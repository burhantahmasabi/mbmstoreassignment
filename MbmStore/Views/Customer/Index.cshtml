@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Customers</title>
    <style>
        .customer{
            margin-bottom: 50px;
        }
        .fullname{
            font-weight: 700;
        }
        .address{
            font-style: italic;
        }

    </style>
</head>
<body>
    <h1>Customers</h1>

    @foreach (MbmStore.Models.Invoice invoice in ViewBag.Invoices) 

    {
        MbmStore.Models.Customer customer = invoice.Customer;
        <div class="customer">
        <p class="fullname"> <span>@customer.FirstName. </span> @customer.LastName  <span>
    @*@foreach (string numbers in name.PhoneNumbers)
        {<span>@numbers </span>}*@
    @String.Join(", ", customer.PhoneNumbers)
</span></p>
        <p class="address">@customer.Address</p>
        <p class="address">@customer.Zip @customer.City</p>
        <p >@customer.FirstName is @customer.Age years old. </p>
     
    </div>

}



</body>
</html>
