@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@{
    ViewData["Title"] = "Movies";
}

<h2>Index</h2>

<a asp-controller="Home" asp-action="Index">Home</a>



@foreach (MbmStore.Models.Movie name in ViewBag.Movies)
{<h2>@name.Title</h2>

   <p>Price: @String.Format("{0:0.00}", name.Price)</p>
    <p><img src="/Images/@name.ImageFileName" alt="@name.Title" /></p>
}



